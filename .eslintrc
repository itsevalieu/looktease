{
    "extends": [
        "strongloop",
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "quotes": [
            2,
            "single",
            {
              "avoidEscape": true,
              "allowTemplateLiterals": true
            }
          ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120
            }
        ]
    },
    "plugins": [
        "prettier"
    ]
}
